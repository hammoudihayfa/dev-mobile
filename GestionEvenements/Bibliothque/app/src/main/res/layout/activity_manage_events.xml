<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <EditText
        android:id="@+id/eventNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Nom de l'événement"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="#7F4AA4" />


    <EditText
        android:id="@+id/eventDateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date de l'événement"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:textColorHint="#7F4AA4"
        android:textColor="#000"
        android:layout_marginBottom="16dp" />


    <EditText
        android:id="@+id/eventLocationEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lieu de l'événement"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:textColorHint="#7F4AA4"
        android:textColor="#000"
        android:layout_marginBottom="16dp" />

    <!-- Bouton Ajouter un Événement -->
    <Button
        android:id="@+id/addEventButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#7f4aa4"
        android:padding="12dp"
        android:text="Ajouter un Événement"
        android:textColor="#FFFFFF" />

    <!-- Bouton Supprimer un Événement -->
    <Button
        android:id="@+id/deleteEventButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#7f4aa4"
        android:padding="12dp"
        android:text="Supprimer un Événement"
        android:textColor="#FFFFFF" />

    <!-- Bouton Modifier un Événement -->
    <Button
        android:id="@+id/editEventButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#7f4aa4"
        android:padding="12dp"
        android:text="Modifier un Événement"
        android:textColor="#FFFFFF" />

    <!-- Bouton Liste des Événements -->
    <Button
        android:id="@+id/viewEventsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#7f4aa4"
        android:padding="12dp"
        android:text="Liste des Événements"
        android:textColor="#FFFFFF" />

</LinearLayout>
